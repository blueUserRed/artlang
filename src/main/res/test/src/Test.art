fn repeat(string: str, times: int) {
    let i = 0;
    while (i < times) {
        print string;
        i = i + 1;
    }
}

fn calc(num1: int, num2: int, subtract: bool): int {
    if (!subtract) return num1 - num2; else return num1 + num2;
}

